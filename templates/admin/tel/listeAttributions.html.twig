{% extends 'base.html.twig' %}

{% block title %}gestion attributions{% endblock %}

{% block body %}
<h2 class="text-center pt-2 ">Gestion des attributions</h2>
<hr>        
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col-1">CPUsers</th>      
      <th scope="col-2">CPCheminaux</th>
      <th scope="col-1">IDPROD</th>
      <th scope="col-5">Libell√©</th>
      <th scope="col-2">DateAttribu</th>
      <th scope="col-2">NumSerie</th>
    </tr>
  </thead>
  
  <tbody>
        {% for leTel in lesTels %}
            <tr>
            <td scope="col-1">{{leTel.cpUsers}}</td>
            <td scope="col-1">{{leTel.cpCheminaux}}</td>
            <td scope="col-1">{{leTel.id}}</td>
